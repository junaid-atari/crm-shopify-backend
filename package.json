{
  "name": "crm-shopify-backend",
  "description": "Backend handler application for Shopify Flow Automation",
  "version": "0.0.1",
  "author": {
    "name": "Junaid Atari",
    "email": "junaid@openletterconnect.com",
    "url": "https://github.com/blacksmoke26"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec babel-node ./src/index.ts --extensions \".ts\"",
    "start:debug": "nodemon --inspect --exec babel-node ./src/index.ts --extensions \".ts\"",
    "clean": "rimraf coverage dist tmp runtime && mkdir coverage runtime dist",
    "prebuild": "npm run lint",
    "build": "yarn run clean && babel src --out-dir ./dist --extensions \".ts\"",
    "build:prod": "yarn run clean && babel src --out-dir ./dist --extensions \".ts\" --minified --no-comments",
    "lint": "eslint .",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/url-data": "^6.0.3",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "http-errors": "^2.0.0",
    "object-path": "^0.11.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/node": "^7.26.0",
    "@babel/plugin-proposal-async-do-expressions": "^7.25.9",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-do-expressions": "^7.25.9",
    "@babel/plugin-proposal-export-default-from": "^7.25.9",
    "@babel/plugin-proposal-throw-expressions": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime": "^7.26.7",
    "@tsconfig/node16": "^16.1.3",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/supertest": "^6.0.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "private": true,
  "engines": {
    "node": ">23.5"
  }
}
